{
    "id": "https://raw.githubusercontent.com/AislingHPE/go-scratch/main/schemas/metaschemas/v4-mwon.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "description": "Meta schema for genesis template schemas, emulating the features of Mark Watkins Object Notation",
    "definitions": {
        "coreSchema": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string"
                },
                "$schema": {
                    "type": "string"
                },
                "title": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "default": {},
                "maximum": {
                    "type": "number"
                },
                "minimum": {
                    "type": "number"
                },
                "maxLength": { "$ref": "#/definitions/positiveInteger" },
                "minLength": { "$ref": "#/definitions/positiveIntegerDefault0" },
                "pattern": {
                    "type": "string",
                    "format": "regex"
                },
                "required": { "$ref": "#/definitions/stringArray" },
                "enum": {
                    "type": "array",
                    "minItems": 1,
                    "uniqueItems": true
                },
                "type": {
                    "$ref": "#/definitions/supportedTypes"
                },
                "format": { "type": "string" }
            },
            "if": {
                "properties": {
                    "type": {"const": "array"}
                }
            },
            "then": {
                "oneOf": [
                    {"items": {"type":"string"}},
                    {"items": {"type":"integer"}}
                ]
            },
            "default": {}
        },
        "schemaLevel1": {
            "type": "object",
            "properties": {
                "properties": {
                    "type": "object",
                    "additionalProperties": { 
                        "allOf": [
                            {"$ref": "#/definitions/schemaLevel2"},
                            {"$ref": "#/definitions/coreSchema"}
                        ]
                    },
                    "default": {}
                }
            }
        },
        "schemaLevel2": {
            "type": "object",
            "properties": {
                "properties": {
                    "type":"null"
                }
            }
        },
        "schemaArray1": {
            "type": "array",
            "minItems": 1,
            "items": {
                "allOf": [
                    {"$ref": "#/definitions/schemaLevel1"},
                    {"$ref": "#/definitions/coreSchema"}
                ]
            }
        },
        "schemaArray2": {
            "type": "array",
            "minItems": 1,
            "items": {
                "allOf": [
                    {"$ref": "#/definitions/schemaLevel2"},
                    {"$ref": "#/definitions/coreSchema"}
                ]
            }
        },
        "positiveInteger": {
            "type": "integer",
            "minimum": 0
        },
        "positiveIntegerDefault0": {
            "allOf": [ { "$ref": "#/definitions/positiveInteger" }, { "default": 0 } ]
        },
        "simpleTypes": {
            "enum": [ "array", "boolean", "integer", "null", "string" ]
        },
        "stringArray": {
            "type": "array",
            "items": { "type": "string" },
            "minItems": 1,
            "uniqueItems": true
        }
    },
    "allOf": [
        {"$ref": "#/definitions/schemaLevel1"},
        {"$ref": "#/definitions/coreSchema"}
    ]
}
